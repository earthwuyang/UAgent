# === RL (bandit) configuration ===
RL_ENABLED=true
RL_ALGO=linucb
RL_EPSILON=0.08
RL_MAX_ACTIONS=64
RL_REWARD_WEIGHTS=1.0,0.8,0.5,-0.15,-0.10
RL_POLICY_SNAPSHOT_DIR=/var/lib/uagent/rl_policies

# === ToolMaker host-mode configuration ===
TOOLMAKER_HOST_MODE=true
TOOLMAKER_UV_BIN=uv
TOOLMAKER_VENV_BASE=/var/lib/uagent/toolmaker_envs
TOOLMAKER_MAX_MINUTES=45
TOOLMAKER_MIN_USEFULNESS=0.78
TOOLMAKER_MIN_SUITABILITY=0.75

# === GEPA optimizer configuration ===
GEPA_ENABLED=true
GEPA_MAX_METRIC_CALLS=150
GEPA_REFLECTION_LM=openai/gpt-5
GEPA_TASK_LM=openai/gpt-4.1-mini
GEPA_TRIGGER_THRESHOLD=0.50
GEPA_MIN_DELTA=0.02

# === Multi-agent debate configuration ===
DEBATE_ENABLED=true
DEBATE_MAX_AGENTS=4
DEBATE_MAX_ROUNDS=2
DEBATE_GROUPS=2
DEBATE_TRIGGER_CONFIDENCE=0.65
DEBATE_TRIGGER_STAKES=high

# === Agent memory (AgentVectorDB) ===
AVDB_PATH=/var/lib/uagent/agent_db
AVDB_DIM=384
AVDB_IMPORTANCE_MIN=0.35
AVDB_MAX_AGE_DAYS=30
